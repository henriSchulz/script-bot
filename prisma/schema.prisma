// }

model ChatMessage {
  id         String   @id @default(cuid())
  role       String   // 'user' or 'model'
  content    String?  // For user messages, plain text
  blocks     String?  // For AI messages, JSON string of blocks array
  createdAt  DateTime @default(now())
  
  exerciseId String
  exercise   Exercise @relation(fields: [exerciseId], references: [id], onDelete: Cascade)
  
  // Optional: track which subtask this message belongs to
  subtaskId  String?  // Stores the subtask id from structure JSON
  
  @@index([exerciseId])
}
